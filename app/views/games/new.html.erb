
<h1>New game</h1>
<hr>
<ul>
  <%@random_list.each do |letter| %>
  <li><%= letter.upcase  %></li>
  <%end%>
</ul>

<form action="/score" method="POST" class="form-inline" data-turbo="false">
  <input type="text" class="form-control" name="answer">
  <input type="submit" class="btn btn-primary" value="attempt!">
  <%= hidden_field_tag :random_list, @random_list%>
  <%= hidden_field_tag :start_time, @start_time%>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
